{
  "version": 3,
  "configurePresets": [
    {
      "name": "clang-base",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_EXE_LINKER_FLAGS": "-stdlib=libc++ -lc++abi",
        "CMAKE_SHARED_LINKER_FLAGS": "-stdlib=libc++ -lc++abi",
        "CMAKE_CXX_FLAGS": "-stdlib=libc++ -freflection-latest"
      }
    },
    {
      "name": "ClangDebug",
      "inherits": "clang-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "REFLEX_BUILD_TESTS": "ON",
        "REFLEX_BUILD_EXAMPLES": "ON",
        "BUILD_TESTING": "ON"
      }
    },
    {
      "name": "ClangRelease",
      "inherits": "clang-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BUILD_TESTING": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "ClangDebug",
      "configurePreset": "ClangDebug"
    },
    {
      "name": "ClangRelease",
      "configurePreset": "ClangRelease"
    }
  ],
  "testPresets": [
    {
      "name": "ClangDebug",
      "configurePreset": "ClangDebug",
      "output": { "outputOnFailure": true },
      "execution": { "noTestsAction": "error", "stopOnFailure": true }
    },
    {
      "name": "ClangRelease",
      "configurePreset": "ClangRelease",
      "output": { "outputOnFailure": true },
      "execution": { "noTestsAction": "error", "stopOnFailure": true }
    }
  ]
}
